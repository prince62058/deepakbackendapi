# Server Configuration
PORT=4555

# Database Configuration
MONGODB_URL=mongodb+srv://your_user:your_password@cluster.mongodb.net/your_db
MONGO_MAX_POOL_SIZE=20
MONGO_MIN_POOL_SIZE=5
MONGO_SERVER_SELECTION_TIMEOUT=30000
MONGO_SOCKET_TIMEOUT=45000
MONGO_WAIT_QUEUE_TIMEOUT=10000

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here

# Default Admin Credentials (for first run)
DEFAULT_ADMIN_EMAIL=admin@ott.com
DEFAULT_ADMIN_PASSWORD=Admin@123

# Object Storage / CDN Configuration
# Old Linode Bucket (for migration regex)
OLD_BUCKET_DOMAIN=in-maa-1.linodeobjects.com/leadkart
# New DigitalOcean Space Domain
NEW_BUCKET_DOMAIN=satyakabir-bucket.sgp1.digitaloceanspaces.com
# Bucket Path (for regex matching)
NEW_BUCKET_PATH=sgp1.digitaloceanspaces.com/satyakabir-bucket

# Cloud Storage (DigitalOcean Spaces / Linode / AWS S3)
LINODE_ACCESS_KEY=your_access_key
LINODE_SECRET_KEY=your_secret_key
LINODE_OBJECT_BUCKET=satyakabir-bucket
LINODE_OBJECT_STORAGE_ENDPOINT=sgp1.digitaloceanspaces.com
LINODE_REGION=sgp1

# Firebase Service Account (Place file in src/db/serviceAccount.json)
# FIREBASE_DATABASE_URL=...
